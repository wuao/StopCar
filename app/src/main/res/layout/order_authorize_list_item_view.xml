<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="李静"
            android:textSize="20sp"/>

        <TextView
            android:layout_weight="1"
            android:id="@+id/user_info_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017.08.09 18:22"
            android:textSize="14sp"/>

        <TextView
            android:layout_weight="1"
            android:id="@+id/order_info_proceed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="进行中"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="14sp"/>
    </LinearLayout>

    <include
        layout="@layout/lineview_uitls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <include
            android:id="@+id/inc_order_number"
            android:layout_weight="1"
            layout="@layout/order_item_uitls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <include
            android:id="@+id/inc_order_time"
            android:layout_weight="1"
            layout="@layout/order_item_uitls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <include
            android:id="@+id/inc_order_money"
            android:layout_weight="1"
            layout="@layout/order_item_uitls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#FFF8F4"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5">
            <Button
                android:id="@+id/see_btn_order_viewstub"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_uitls_shape"
                android:text="查   看"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <View
    android:background="@android:color/black"
    android:layout_width="match_parent"
    android:layout_height="2dp"/>
</LinearLayout>


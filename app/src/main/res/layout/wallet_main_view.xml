<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@android:color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include
        android:id="@+id/my_wallet_tool_bar"
        layout="@layout/toolbar_uit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"/>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:background="@drawable/my_wallet"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:text="@string/wallet_my"
            android:layout_width="wrap_content"
            android:layout_height="40dp"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:id="@+id/my_yue"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:text="@string/my_menoey"
                android:layout_width="wrap_content"
                android:layout_height="40dp"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/my_wallet_btn"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/shape"
                android:layout_centerInParent="true"
                android:text="@string/my_chongzhi"
                android:layout_width="350dp"
                android:layout_height="48.5dp"/>
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
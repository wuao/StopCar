<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"

              android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="李静"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/user_info_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="2017.08.09 18:22"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/order_info_proceed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="进行中"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="22sp"/>
    </LinearLayout>

    <include
        layout="@layout/lineview_uitls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <include
            android:id="@+id/inc_order_number"
            android:layout_weight="1"
            layout="@layout/order_item_uitls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <include
            android:id="@+id/inc_order_time"
            android:layout_weight="1"
            layout="@layout/order_item_uitls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <include
            android:id="@+id/inc_order_money"
            android:layout_weight="1"
            layout="@layout/order_item_uitls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#FFF8F4"
        android:layout_height="35dp">

        <ViewStub
            android:layout="@layout/btu_viewstub_uitls"
            android:id="@+id/authorize_btn_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ViewStub
            android:layout="@layout/btu_viewstub_uitls"
            android:id="@+id/remove_btn_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ViewStub
            android:layout="@layout/btu_viewstub_uitls"
            android:id="@+id/see_btn_order_viewstub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
<view
    android:layout_width="match_parent"
    android:layout_height="1dp"/>
</LinearLayout>

